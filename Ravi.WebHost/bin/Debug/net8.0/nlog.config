<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      throwExceptions="false"
      internalLogLevel="Off"
      internalLogFile="internal-nlog.log">

  <extensions>
    <add assembly="NLog.Web.AspNetCore"/>
    <add assembly="NLog.DiagnosticSource"/>
  </extensions>

  <variables>
    <variable name="logDirectory" value="${basedir}/../../../../Logs" />
    <variable name="logArchiveDirectory" value="${logDirectory}/Archives" />
    <variable name="serviceName" value="Ravi.WebHost" />
    <variable name="jsonLayout">
      <layout xsi:type="JsonLayout" includeAllProperties="true" excludeProperties="Protocol,Method,Scheme,PathBase,Path,EventId">
        <attribute name="time" layout="${longdate}" />
        <attribute name="traceidentifier" layout="${aspnet-traceidentifier}" />
        <attribute name="level" layout="${level}" />
        <attribute name="message" layout="${message}" />
        <attribute name="username" layout="${aspnet-user-identity}" />
        <attribute name="querystring" layout="${aspnet-request-querystring}" />
        <attribute name="logger" layout="${logger}" />
        <attribute name="exception" encode="false">
          <layout xsi:type="JsonLayout">
            <attribute name="type" layout="${exception:format=Type}" />
            <attribute name="message" layout="${exception:format=message}" />
            <attribute name="stacktrace" layout="${exception:format=stacktrace}" />
            <attribute name="inner" layout="${exception:format=toString:innerFormat=ShortType,Message}" />
          </layout>
        </attribute>
      </layout>
    </variable>
  </variables>

  <targets>
    <!-- Console target -->
    <target xsi:type="Console" name="console" layout="${longdate}|${level:uppercase=true}|${logger}|${message} ${exception:format=ToString}" />

    <!-- JSON File target -->
    <target xsi:type="File" name="logfile"
            layout="${jsonLayout}"
            fileName="${logDirectory}/${serviceName}.json"
            archiveFileName="${logArchiveDirectory}/${serviceName}-{#}.json"
            archiveNumbering="DateAndSequence"
            archiveDateFormat="yyyy-MM-dd"
            archiveEvery="Day"
            archiveAboveSize="5000000"
            createDirs="true"
            maxArchiveFiles="7" />

    <target xsi:type="Console" name="logconsole" layout="${jsonLayout}" />
  </targets>

  <rules>

    <!-- ASP.NET Core API requests (/api only) -->
    <logger name="Microsoft.AspNetCore.*" minlevel="Info" writeTo="logfile,logconsole">
      <filters defaultAction="Ignore">
        <when condition="starts-with('${aspnet-request-path}', '/api')" action="Log" />
      </filters>
    </logger>

    <!-- Application logs -->
    <logger name="MyGift.*" minlevel="Info" writeTo="logfile,logconsole" />

    <!-- Program.cs logs -->
    <logger name="Program" minlevel="Info" writeTo="logfile,logconsole" />

    <!-- Everything else -->
    <logger name="*" minlevel="Warn" writeTo="logfile,logconsole" />

  </rules>

</nlog>
